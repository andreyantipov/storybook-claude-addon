{
  "name": "@andreyantipov/storybook-addon-claude",
  "version": "2.0.0",
  "description": "Storybook addon for Claude AI integration with Mastra agents and streaming chat",
  "license": "MIT",
  "author": "Andrey Antipov",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreyantipov/storybook-claude-addon.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "nx run storybook-addon-claude:build",
    "dev": "nx run storybook-addon-claude:dev",
    "storybook": "nx run storybook-addon-claude:storybook",
    "mastra": "nx run storybook-addon-claude:mastra",
    "build-storybook": "nx run storybook-addon-claude:build-storybook",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./manager": {
      "types": "./dist/manager.d.ts",
      "import": "./dist/manager.mjs",
      "require": "./dist/manager.js"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "import": "./dist/preset.mjs",
      "require": "./dist/preset.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "storybook-addons",
    "storybook",
    "claude",
    "anthropic",
    "mastra",
    "ai",
    "chat",
    "streaming",
    "agent"
  ],
  "peerDependencies": {
    "@storybook/components": "^8.0.0",
    "@storybook/manager-api": "^8.0.0",
    "@storybook/theming": "^8.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.9",
    "@mastra/core": "^0.24.9",
    "ai": "^5.0.118",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nx/storybook": "22.3.3",
    "@nx/vite": "22.3.3",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/components": "^8.6.0",
    "@storybook/manager-api": "^8.6.0",
    "@storybook/react": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@storybook/theming": "^8.6.0",
    "@storybook/types": "^8.6.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "nx": "22.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^8.6.15",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0"
  },
  "storybook": {
    "displayName": "Claude AI Assistant",
    "supportedFrameworks": [
      "react"
    ],
    "icon": "https://www.anthropic.com/favicon.ico"
  },
  "nx": {}
}
